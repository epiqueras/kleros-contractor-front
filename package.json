{
  "name": "kleros-contractor-front",
  "version": "0.0.1",
  "description": "The front end for Kleros contractors.",
  "main": "dist/index.js",
  "scripts": {
    "prettify":
      "prettier --config ./.prettierrc --write \"./*.{js,json}\" \"./src/**/*.{js,json}\"",
    "lint": "xo",
    "test": "jest --config jest.config.json",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged && yarn run lint && yarn test",
    "commit": "git-cz",
    "start":
      "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.dev.js",
    "build":
      "cross-env NODE_ENV=production webpack --config webpack.config.prod.js"
  },
  "lint-staged": {
    "*.{js,json}": ["prettier --config ./.prettierrc --write", "git add"]
  },
  "author": "Kleros",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "history": "^4.7.2",
    "kleros-api": "^0.0.46",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loadable": "^5.3.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-table": "^6.7.5",
    "redux": "^3.7.2",
    "redux-form": "^7.2.0",
    "redux-saga": "^0.16.0",
    "styled-jsx": "^2.2.1",
    "web3": "^1.0.0-beta.26"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.5",
    "@commitlint/config-conventional": "^5.2.3",
    "@commitlint/prompt": "^5.2.5",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "commitizen": "^2.9.6",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo-react": "^0.15.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.5.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "inline-manifest-webpack-plugin": "^3.0.1",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "prettier": "^1.9.2",
    "prop-types": "^15.6.0",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-unhandled-action": "^1.3.0",
    "standard-version": "^4.2.0",
    "style-loader": "^0.19.1",
    "styled-jsx-plugin-sass": "^0.2.2",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.7",
    "xo": "^0.18.2"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "xo": {
    "envs": ["browser", "jest"],
    "rules": {
      "require-jsdoc": ["error"],
      "valid-jsdoc": [
        "error",
        {
          "prefer": {
            "arg": "param",
            "argument": "param",
            "class": "constructor",
            "return": "returns",
            "virtual": "abstract"
          },
          "preferType": {
            "Boolean": "boolean",
            "Number": "number",
            "Object": "object",
            "String": "string"
          },
          "requireReturn": false,
          "requireReturnType": true,
          "requireParamDescription": true,
          "requireReturnDescription": true
        }
      ],
      "indent": 0,
      "react/jsx-indent": 0,
      "react/jsx-indent-props": 0,
      "no-return-assign": "off",
      "import/no-unassigned-import": "off",
      "arrow-body-style": ["error", "as-needed"],
      "no-extra-bind": "error",
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": ["acc"]
        }
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [".js"]
        }
      ],
      "react/forbid-component-props": 0,
      "react/forbid-prop-types": 2,
      "react/prefer-stateless-function": 2,
      "prettier/prettier": "error"
    },
    "plugins": ["prettier"],
    "extends": [
      "./-xo-webpack-resolver.js",
      "xo-react",
      "prettier",
      "prettier/react"
    ],
    "parser": "babel-eslint"
  }
}
